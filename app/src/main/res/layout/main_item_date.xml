<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/tv_item_routing_state"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/circle_bg_full"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/view_item_routing_bottom_line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="#D0D5E4"
        app:layout_constraintEnd_toEndOf="@+id/tv_item_routing_state"
        app:layout_constraintStart_toStartOf="@+id/tv_item_routing_state"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_routing_state"
        app:layout_constraintBottom_toBottomOf="parent"
         />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hskfslf"
        android:layout_marginLeft="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_item_routing_state"
        />

    <TextView
        android:id="@+id/tv_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3ç«™"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_item_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>